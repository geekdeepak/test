<div class="task <%= "overdue" if task.overdue? %>">

  <% if local_assigns[:task_counter] %>
    <div class="number"><%= task_counter + 1 %></div>
  <% end %>
  
  <span class="name_user">
    <%= link_to(truncate(h(task.name), :length => 25, :omission =>"..."), task, :class => 'name') %>
    (<%= profile_list(task)%>)
  </span>
  
  <span class="when">
    <% if task.conflict? %>
      <%= link_to( 'Conflict', task ) %>
    <% else %>
      <%= task.due_date_time %>
    <% end %>
  </span>
  
  <span class="duration">
    <%= task.duration || 0 %>min
  </span>
  
  <% if task.completed? %>
    <%= link_to "Re-Open", :controller => 'tasks', :action => 'reopen', :id => task %>
  <% else %>
    <ul class="actions">
      <li><%= link_to 'Start', start_task_path(task) if !task.in_progress? && !task.paused? %></li>
      <li><%= link_to 'Resume', start_task_path(task) if task.paused? && task.users.include?(@current_user) %></li>
      <li><%= link_to 'Continue', start_task_path(task) if task.in_progress? && tasks.include?(@current_user) %></li>
      <li><%= link_to 'In Progress', edit_task_path(task) if (task.paused? || task.in_progress?) && !task.profiles.include?(@current_profile) %></li>
    </ul>
  <% end %>
</div>
