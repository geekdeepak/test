<script type="text/javascript">
  window.onbeforeunload = fget;
  function fget() {
    if (flag == 0){
    confirm("Your job will be paused after this action.\nAre you sure you want to pause the job ?");
    return "Your job will be paused after this action.\nAre you sure you want to pause the job ?"
    }
  }

//  Event.observe(window, 'load', function() { 
	//  timedCount();
  //});
  
  $(document).ready(function() {
   timedCount();
   });
  
  var hh=<%=@used_hours%>,mm=<%=@used_minutes%>,ss=<%=@used_seconds%>;
  var call_ajax=0;
  var flag = 0;
  function timedCount()
  {
      call_ajax +=1;
      if(call_ajax ==60){
        call_ajax=0;
        sync_logs(<%= @task.id %>)
      }
      dh = hh;
      dm = mm;
      ds = ss;

      if(hh<10)
      dh = "0" + hh;

      if(mm<10)
      dm = "0" + mm;

      if(ss<10)
      ds = "0" + ss ;

      document.getElementById('stop_watch').innerHTML= dh + " : " + dm +" : "+ ds;
      ss = ss+1;
      if(ss>59)
      {
       mm++;
       ss = 0;    
      }

      if(mm>59){
        hh++; 
        mm = 0;
      }

      setTimeout("timedCount()",1000);
  }
  function sync_logs(task){
  new Ajax.Request("/tasks/<%=@task.id%>/sync_log", {
    method: 'get',
    });
  }

</script>
