<% @page_header = "Contacts "%>
<p><b>My Contacts</b></p>
<ul>
<% for contact in @my_contacts %>
  <li>
    <%= contact.contactee.name %>
    <ul>
    <% contact.lives.each do |life| %>
      <li><%= link_to life.profile.name, life.profile %></li>
    <% end %>
    </ul>
  </li>
<% end %>
</ul>

<% unless @life %>

  <p><b>People who have me</b></p>
  <ul>
  <% for contact in @contacts_me %>
    <li>
      <%= contact.contacter.name %>
    </li>
  <% end %>
  </ul>

<% end %>

<p><%= link_to "New Contact", new_life_contact_path(@life) if @life%></p>
