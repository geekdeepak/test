<div class="project">

  <span class="name"><%= link_to h(project.name), project_tasks_path(project), :class => 'name' %><br />
  <%= project.description.blank? ? "A Goal" : project.description %></span>
  
  <span class="next_task"><%= next_task(project) %></span>
  
  <span class="tasks"><%= project.tasks.incomplete.count %></span>
  
  <span class="users"><%= project.lives.count %></span>
  
  <div class="progress">
    <span class="percent"><%= complete_to_percent(project) %></span> <br />
    <span class="actual"><%= total_complete(project) %></span>
  </div>
  
</div>
