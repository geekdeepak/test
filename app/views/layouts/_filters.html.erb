<% if params[:controller]=='tasks' %>
<h2>Status</h2>
  <ul>
    <%#= !@selected_user ? '<li class="selected">' : "<li>"%>
      <%#= link_to( "All", project_tasks_path(@project) ) if @project %>
      <%#= link_to( "All", life_tasks_path(@life) ) if @life && !@project %>
      <%#= link_to( "All", tasks_path ) if !@life && !@project %>
    <!--</li>-->
    <%#- unless @users.empty? || (@project && @project.new_record?) -%>
      <%#- @users.each do |user| -%>
        <%#= @selected_user == user.id ? '<li class="selected">' : "<li>"%>
          <%#= link_to user.name, project_user_path(@project, user) if @project %>
          <%#= link_to user.name, life_user_path(@life, user) if @life && !@project %>
          <%#= link_to user.name, tasks_user_path(user) if @lives && !@life && !@project %>
<!--        </li>-->
      <%#- end -%>
    <%#- end -%>
    <%#=(params[:action]=='opened') ? '<li class="selected">' : "<li>"%>
      <%#= link_to("Open",opened_project_tasks_path(@project))%>
    <%#</li>%>

    <%=(params[:action]=='paused')  ? '<li class="selected">' : "<li>"%>
      <%= link_to("Open",paused_project_tasks_path(@project))%>
    </li>
    <li>
    <%=(params[:action]=='completed')  ? '<li class="selected">' : "<li>"%>
   <%= link_to("Completed",completed_project_tasks_path(@project))%>
    </li>

  </ul>
  <% end %>

