<% @page_header = "Messages" %>
<% form_for @message do |f| %>
  
  <%= f.error_messages %>
  <p>
    <%= f.label :to %>
    <%= select 'user', 'id', @to.each.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select User'} %>
  </p>

  <p>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <%= submit_tag 'Send' %>
  
<% end %>
